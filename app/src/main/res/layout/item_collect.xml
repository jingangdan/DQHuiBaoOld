<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_item_mc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_style"
            android:scaleX="0.6"
            android:scaleY="0.6" />

        <ImageView
            android:id="@+id/iv_item_mc"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@mipmap/ic_goods" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_mc_goodsname"
                style="@style/text_main"
                android:layout_marginBottom="5dp"
                android:text="五颜六色的酒" />

            <TextView
                android:id="@+id/tv_item_mc_optionname"
                style="@style/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_delete" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>