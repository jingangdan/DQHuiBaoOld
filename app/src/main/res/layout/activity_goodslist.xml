<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_sales_top"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="销量从高到低"
            android:textColor="@color/tv_color001"
            android:textSize="12dp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/view_main" />

        <TextView
            android:id="@+id/tv_price_low"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="价格从低到高"
            android:textSize="12dp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/view_main" />

        <TextView
            android:id="@+id/tv_price_top"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="价格从高到低"
            android:textSize="12dp" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="fill_parent"
            android:background="@color/view_main" />

        <TextView
            android:id="@+id/tv_comment_top"
            style="@style/text_adware"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="5dp"
            android:text="评价从高到低"
            android:textSize="12dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lrv_goodslist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
