<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            style="@style/text_main"
            android:layout_alignParentLeft="true"
            android:text="惠宝商城" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/text_main"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="删除" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <CheckBox
            android:id="@+id/ck_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box_style"
            android:scaleX="0.6"
            android:scaleY="0.6" />

        <ImageView
            android:id="@+id/iv_show_pic"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:background="@mipmap/ic_goods" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_toRightOf="@id/iv_show_pic"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_commodity_name"
                style="@style/text_main"
                android:layout_marginBottom="5dp"
                android:text="五颜六色的酒" />

            <TextView
                style="@style/text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_main"
                android:text="￥390.00"
                android:textStyle="bold" />

            <TextView
                style="@style/text_main"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="￥500.00"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/kuang_gary"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_sub"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_sub" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_show_num"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/kuang_style"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000" />

                <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/kuang_gary"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@mipmap/ic_add" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>