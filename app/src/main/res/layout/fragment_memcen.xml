<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin_percen_nologin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/activity_nologin" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_percen_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--头像、名称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F15353"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!--<com.dq.huibao.view.RoundImageView-->
                    <!--android:id="@+id/riv_memcen"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@mipmap/ic_launcher" />-->

                    <ImageView
                        android:id="@+id/iv_memcen"
                        android:layout_width="64dp"
                        android:layout_height="64dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_mc_nickname"
                            style="@style/text_white"
                            android:text="用户名称" />

                        <TextView
                            android:id="@+id/tv_mc_id"
                            style="@style/text_white"
                            android:text="id" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_mc_level"
                            style="@style/text_white"
                            android:text="会员等级" />

                        <TextView
                            android:id="@+id/tv_mc_l"
                            style="@style/text_white"
                            android:text="[推荐人]" />

                    </LinearLayout>

                </LinearLayout>

                <!--我的账号-->
                <include layout="@layout/include_mc_account" />

                <!--我的订单-->
                <include layout="@layout/include_mc_order" />

                <!--菜单-->
                <include layout="@layout/include_mc_menu" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
