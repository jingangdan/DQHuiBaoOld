<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="分销中心" />

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="我的资料" />

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="购物车" />

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="我的收藏" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="我的足迹" />

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="优惠券" />

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="积分商城" />

            <Button
                style="@style/text_main"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@mipmap/ic_mc_pay"
                android:text="待付款"
                android:visibility="invisible" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginBottom="10dp"
        android:background="#E3E3E3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="绑定手机" />

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="供应商申请" />

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="悦读" />

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="充值记录" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginBottom="10dp"
        android:background="#E3E3E3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#E3E3E3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="消息提醒" />

        <Button
            android:id="@+id/but_mc_address"
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="收货地址
" />

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="待付款"
            android:visibility="invisible" />

        <Button
            style="@style/text_main"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_mc_pay"
            android:text="待付款"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>
