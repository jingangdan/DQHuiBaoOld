<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_main">

    <android.support.design.widget.TabLayout
        android:background="@color/bg_white"
        android:id="@+id/tl_mc_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/tv_color001"
        app:tabSelectedTextColor="@color/tv_color001">
    </android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_main"/>

    <com.dq.huibao.view.NoScrollViewPager
        android:id="@+id/vp_mc_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
