<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!--内容-->
    <!--<com.dq.huibao.view.goodsdetails_foot.ScrollViewContainer-->
    <!--android:id="@+id/sv_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_above="@+id/lin_gd_footer"-->
    <!--android:layout_below="@+id/rel_gd_header">-->

    <!--<include layout="@layout/include_gd_header" />-->

    <!--<include layout="@layout/include_gd_footer" />-->

    <!--</com.dq.huibao.view.goodsdetails_foot.ScrollViewContainer>-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_gd_footer"
        android:layout_below="@+id/rel_gd_header"
        android:scrollbars="none">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_gd_header" />

            <include layout="@layout/include_gd_footer" />

        </LinearLayout>

    </ScrollView>

    <!--头部-->
    <RelativeLayout
        android:id="@+id/rel_gd_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#00000000">

        <ImageView
            android:id="@+id/iv_gd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/tv_gd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:maxLength="20"
            android:text="商品名称" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_add"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_main" />

    </RelativeLayout>

    <!--底部-->
    <LinearLayout
        android:id="@+id/lin_gd_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_main"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but_gd_collection"
            style="@style/text_main"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_collection001"
            android:padding="2dp"
            android:text="收藏" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="45dp"
            android:background="@color/view_main" />

        <Button
            style="@style/text_main"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/ic_service001"
            android:padding="2dp"
            android:text="客服" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="45dp"
            android:background="@color/view_main" />

        <Button
            style="@style/text_main"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/icon_shopcar002"
            android:padding="2dp"
            android:text="购物车" />

        <Button
            android:id="@+id/but_gd_put_in"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/but_put_in"
            android:text="加入购物车"
            android:textColor="#fff"
            android:textSize="16dp" />

        <Button
            android:id="@+id/but_gd_bug_new"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@color/mycolor"
            android:text="立即购买"
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_all_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>

</RelativeLayout>
